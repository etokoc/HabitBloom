<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HabitApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.HabitApp" parent="Base.Theme.HabitApp" />

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
    </style>

    <style name="SeeAllButtonStyle">
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="CustomFabButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="CustomBottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color</item>
        <item name="itemIconSize">24dp</item>
    </style>

    <style name="CustomDialogTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomDialogTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomDialogInput" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="CustomMainButtonStyle">
        <item name="android:background">@drawable/custom_main_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomSpinnerStyle">
        <item name="android:background">@drawable/custom_spinner_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="PageTitleStyle">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">29sp</item>
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginEnd">21dp</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="CustomStepButtonStyle" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@drawable/step_bg_item</item>
        <item name="android:textColor">@color/step_text_color</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:width">100dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

</resources>