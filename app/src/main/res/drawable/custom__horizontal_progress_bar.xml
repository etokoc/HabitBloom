<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="@color/spinner_bg_color"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dp" />
                <gradient
                    android:angle="360"
                    android:endColor="@color/orange_end_color"
                    android:startColor="@color/orange_start_color" />
            </shape>
        </clip>
    </item>

</layer-list>